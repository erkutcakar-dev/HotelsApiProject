
@{
    ViewData["Title"] = "SearchForm";
    Layout = "~/Views/Shared/_HotelLayout.cshtml";
}

<section class="book-now-area section-padding-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="book-now-form">
                    <form asp-action="Result" method="post">
                        <div class="form-group">
                            <label>Şehir</label>
                            <input type="text" name="query" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Giriş Tarihi</label>
                            <input type="date" name="checkinDate" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Çıkış Tarihi</label>
                            <input type="date" name="checkoutDate" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Yetişkin <script></script></label>
                            <input type="number" name="adults" class="form-control" min="1" max="10" required />
                        </div>
                        <div class="form-group">
                            <label>Çocuk Sayısı</label>
                            <input type="number" name="children" class="form-control" min="0" max="10" required />
                        </div>
                        <button type="submit" class="btn palatin-btn mt-3">Hotel Ara</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

