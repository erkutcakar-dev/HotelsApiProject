@{
    ViewData["Title"] = "SearchForm";
    Layout = "~/Views/Shared/_HotelLayout.cshtml";
    var today = DateTime.Today.ToString("yyyy-MM-dd");
}

<section class="book-now-area section-padding-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="section-heading text-center mb-6"> 
                    <div class="line"></div>
                    <h2>Otel Ara</h2>
                    <p>Şehir, tarih ve kişi bilgilerini girerek otel arayın.</p>
                </div>
                <div class="book-now-form">
                    <form asp-action="Result" method="post" autocomplete="off">

                        <div class="form-group ml ">
                            <label for="query">Şehir</label>
                            <input type="text" class="form-control" name="query" id="query" placeholder="Örn: İstanbul" required />
                        </div>

                        <div class="form-group">
                            <label for="checkinDate">Giriş Tarihi</label>
                            <input type="date" class="form-control" name="checkinDate" id="checkinDate" required min="@today" />
                            <br />
                            <label for="checkoutDate">Çıkış Tarihi</label>
                            <input type="date" class="form-control" name="checkoutDate" id="checkoutDate" required min="@today" />
                        </div>

                        <div class="form-group">
                            <label for="adults">Yetişkin</label>
                            <select class="form-control" name="adults" id="adults">
                                @for (int i = 1; i <= 10; i++)
                                {
                                    if (i == 2)
                                    {
                                        <option value="@i" selected>@i</option>
                                    }
                                    else
                                    {
                                        <option value="@i">@i</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="children">Çocuk</label>
                            <select class="form-control" name="children" id="children">
                                @for (int i = 0; i <= 10; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>

                        <div class="form-group mt-10 text-center">
                            <button type="submit" class="btn palatin-btn">Otel Ara</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
